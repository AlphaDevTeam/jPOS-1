<?xml version="1.0" encoding="ISO-8859-1"?>
<project>

  <!-- the version of maven's project object model -->
  <pomVersion>3</pomVersion>
  
  <!-- a unique name for this project -->
  <id>q2mbean</id>
  
  <!-- a short but descriptive name for the project -->
  <name>Q2 JBoss MBean</name>
  
  <!-- The version of the project under development, e.g.
       1.1, 1.2, 2.0-SNAPSHOT -->
  <currentVersion>1.0-SNAPSHOT</currentVersion>
  
  <!-- details about the organization that 'owns' the project -->
  <organization>
    <name>jPos</name>
    <url>http://www.jpos.org/</url>
    <logo>http://www.jpos.org/images/jpos_s.jpg</logo>
  </organization>
  
  <!-- the year the project started -->
  <inceptionYear>2004</inceptionYear>
  <package>org.jboss.mbean</package>
  <logo>http://www.jpos.org/images/jpos_s.jpg</logo>
  <description>
    JBoss MBean for deploying Q2 within JBoss.
  </description>
  <!-- a short description of what the project does -->
  <shortDescription>
    JBoss MBean for deploying Q2 within JBoss.
  </shortDescription>

  <!-- the project home page -->
  <url>http://www.jpos.org</url>
  <issueTrackingUrl></issueTrackingUrl>
  <siteAddress>www.jpos.org</siteAddress>
  <siteDirectory></siteDirectory>
  <distributionDirectory></distributionDirectory>

  <!-- the version control repository and http url for online access
       the connection element has the form:
       scm:<system>:<system specific connection string> -->
  <repository>
    <connection>scm:cvs:pserver:anoncvs@cvs.apache.org:/home/cvspublic:maven-plugins/examples</connection>
    <url>http://cvs.apache.org/viewcvs/maven-plugins/examples/</url>
  </repository>

  <!-- any mailing lists for the project -->
  <mailingLists/>
  
  <!-- who the developers are for the project -->
  <developers/>

  <!-- jar files the project is dependent on -->
  <dependencies>
    <dependency>
    	<groupId>xdoclet</groupId>
    	<artifactId>xjavadoc</artifactId>
    	<version>1.0.2</version>
    </dependency>
    <dependency>
    	<id>xdoclet+xdoclet-module</id>
    	<version>1.2</version>
    </dependency>
    <dependency>
    	<id>xdoclet+ejb-module</id>
    	<version>1.2</version>
    </dependency>
    <dependency>
    	<id>xdoclet+jboss-module</id>
    	<version>1.2</version>
    </dependency>
    <dependency>
    	<id>xdoclet+jmx-module</id>
    	<version>1.2</version>
    </dependency>
    <dependency>
    	<id>ejb</id>
    	<version>2.1</version>
    </dependency>
    <dependency>
    	<id>xdoclet</id>
    	<version>1.2</version>
    </dependency>
    <dependency>
    	<id>xdoclet+web-module</id>
    	<version>1.2</version>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss-system</artifactId>
      <version>3.2.1</version>
    </dependency>
    <dependency>
      <groupId>jpos</groupId>
      <artifactId>q2</artifactId>
      <version>1.0.1</version>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss-jmx</artifactId>
      <version>3.2.1</version>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss-common</artifactId>
      <version>3.2.1</version>
    </dependency>
  </dependencies>  

  <!-- build information for the project -->
  <build>
    <nagEmailAddress></nagEmailAddress>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/NaughtyTest.java</exclude>
      </excludes>
    </unitTest>

    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
    </resources>
  </build>

  <reports>
  	<report>maven-changelog-plugin</report>
  	<report>maven-changes-plugin</report>
  	<report>maven-developer-activity-plugin</report>
  	<report>maven-file-activity-plugin</report>
    <report>maven-statcvs-plugin</report>
    <report>maven-javadoc-plugin</report>
  </reports>

</project>

