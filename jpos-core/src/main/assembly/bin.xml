  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <!--
    <format>tar.bz2</format>
    <format>zip</format>
    -->
  </formats>
  <baseDirectory>jpos-${project.version}</baseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>

  <dependencySets>
