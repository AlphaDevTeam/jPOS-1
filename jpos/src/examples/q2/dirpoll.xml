<dir-poll path="dumps" create="yes" class="org.jpos.q2.qbean.DirPollAdaptor"
    logger="Q2" realm="dirpoll" >

 <attr name="path">/tmp</attr>
 <attr name="priorities">.REQ</attr>
 <attr name="poolSize" type="java.lang.Integer">1</attr>
 <attr name="pollInterval" type="java.lang.Long">250</attr>
 <attr name="processor">your.Processor</attr>

</dir-poll>

