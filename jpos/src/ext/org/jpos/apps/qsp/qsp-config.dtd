<!ELEMENT qsp-config (logger*,channel*)>

<!-- logger -->
<!ELEMENT logger (log-listener*)>
<!ATTLIST logger name ID #REQUIRED>

<!-- log-listener -->
<!ELEMENT log-listener EMPTY>
<!ATTLIST log-listener type (simple|rotate) #REQUIRED>
<!ATTLIST log-listener name CDATA #IMPLIED>
<!ATTLIST log-listener filename CDATA #IMPLIED>
<!ATTLIST log-listener window   CDATA #IMPLIED>
<!ATTLIST log-listener copies   CDATA #IMPLIED>

<!-- channel -->
<!ELEMENT channel (#PCDATA)>
<!ATTLIST channel name ID #REQUIRED>
<!ATTLIST channel class CDATA #IMPLIED>
<!ATTLIST channel packager CDATA #IMPLIED>
<!ATTLIST channel type (client|server) 'client'>
<!ATTLIST channel host CDATA #IMPLIED>
<!ATTLIST channel port CDATA #IMPLIED>
<!ATTLIST channel logger IDREF #IMPLIED>
<!ATTLIST channel realm CDATA #IMPLIED>


