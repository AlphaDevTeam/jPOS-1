#!/bin/sh
#
# $Id$
#
umask 007
cd `dirname $0`/.. || exit 1

if [ -z "$JAVA_HOME" ] ; then
  JAVA=`which java`
  if [ -z "$JAVA" ] ; then
    echo "Cannot find JAVA. Please set your PATH."
    exit 1
  fi
  JAVA_HOME=`dirname $JAVA`/..
fi
JAVA=$JAVA_HOME/bin/java

# CLASSPATH=`echo lib/*.jar | tr ' ' ':'`:$CLASSPATH
CLASSPATH=lib/ant.jar:lib/commons-logging.jar:lib/crimson.jar:lib/jaxp.jar:$JAVA_HOME/lib/tools.jar

$JAVA -classpath $CLASSPATH org.apache.tools.ant.Main "$@" -buildfile src/build.xml
